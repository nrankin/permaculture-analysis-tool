<%= form_for [@project, @snapshot] do |f| %>
    <% if @snapshot.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@snapshot.errors.count, "error") %><%=  t('snapshot.error.list') %></h2>

          <ul>
            <% @snapshot.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %><br>
    </div>

    <%= render 'snapshot_table' %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
