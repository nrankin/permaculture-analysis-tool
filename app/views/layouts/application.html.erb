<!DOCTYPE html>
<html>
<head>
  <title>PermacultureAnalysisTool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'smoothness/jquery-ui-1.10.4.custom.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'js/jquery-ui-1.10.4.custom.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'pp_slider.js', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1><%= t('title') %></h1>
<% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>.
    <%= link_to t('logout'), destroy_user_session_path, method: :delete %>
    <%= link_to t('project.index'), projects_path(current_user) %>
<% else %>
    <% link_to t('signup'), new_user_registration_path %>
    <% link_to t('login'), new_user_session_path %>
<% end %>

<%= yield %>

</body>
</html>
